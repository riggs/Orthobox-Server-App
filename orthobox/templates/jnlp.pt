<?xml version="1.0" encoding="UTF-8"?>
<jnlp spec="1.0+" codebase="http://staging.xlms.org:8128" href="jnlp/${session_id}.jnlp">
    <information>
        <title>Orthobox xlms client app</title>
        <vendor>Synaptic Design</vendor>
        <offline-allowed/>
    </information>
    <resources>
        <!-- Application Resources -->
        <j2se version="1.7+" href= "http://java.sun.com/products/autodl/j2se"/>
        <jar href="jar/orthobox.jar"
             main="true" />

    </resources>
    <application-desc
            name="Orthobox Client App"
            main-class="com.synapticdesign.orthobox.OrthoBox"
            width="300"
            height="400">
        <argument>${url}</argument><!-- URL to post data -->
        <argument>${session_id}.mp4</argument><!-- video upload filename -->
        <!-- TODO: implement basic security -->
        <!-- argument>${upload_token}</argument --><!-- Auth token -->
    </application-desc>
    <update check="background"/>
    <security>
        <all-permissions/>
    </security>
</jnlp>
